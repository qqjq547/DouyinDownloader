<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/et_video"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="start"
        android:background="#eeeeee"
        android:padding="10dp"
        android:hint="把抖音复制的文本，粘贴到这里"
        />
    <Button
        android:id="@+id/btb_parse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="解析内容"/>
    <TextView
        android:id="@+id/tv_picture_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:layout_marginTop="15dp"
        android:background="#eeeeee"
        android:hint="封面图片地址,单击复制"/>
    <TextView
        android:id="@+id/tv_video_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:layout_marginTop="15dp"
        android:background="#eeeeee"
        android:hint="视频文件地址,单击复制"/>

    <Button
        android:id="@+id/btb_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="下载视频"/>

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"/>
</LinearLayout>